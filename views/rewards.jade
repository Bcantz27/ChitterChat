extends layout

block content

    nav.navbar.navbar-default
        .container
            .navbar-header.navbar-center
                a.nav-brand(href="/")
                    img(src="/img/logo.png")
            ul.nav.navbar-nav.navbar-left
                li
                    a(href="/") Home
                -if(loggedInAs.length > 0){
                li
                    a(href="/profile") Profile
                -}
            ul.nav.navbar-nav.navbar-right
                -if(loggedInAs.length > 0){
                li
                    a(href="/following") Following
                li
                    a(href="/myrooms") My Rooms
                -}
    .container
        .row
            h1.text-center Reputation Rewards (More Coming Soon)
            p.text-center You will be able to use your reputation to unlock unique emotes, icons, and images which you can display throughout the site.
            .col-lg-8.col-lg-offset-2.well
                h1.text-center Badges
                hr
                h1.text-center(style="line-height: 14px;font-size: 20px") Tier 1
                p.text-center(style="line-height: 8px;") (0 Reputation Required.)
                -if(message.length > 0){
                    .alert.alert-success.text-center= message
                -}
                form(action="/reprewards/updatebadge" method="post")
                    ul#badgelist
                        -var n = 0
                        while n < badgeList.length
                            li
                                img(src="/img/badges/" + badgeList[n].name + "_128.png")
                                br
                                -if(currBadge == badgeList[n].id){
                                    input(style="margin-left: 46%" type="radio" name="badge" value=""+badgeList[n].id checked)
                                -}else{
                                    input(style="margin-left: 46%" type="radio" name="badge" value=""+badgeList[n].id)
                                -}
                            -n++
                    br
                    button.btn.btn-warning.btn-lg(style="margin-left: 45%" type="submit") Save
    .push
    footer
        p.text-center ChitterChat 2015
        a(href="/support" style="position: absolute; top: 23px; left: 50px; color: white;") Support
        a(href="/faq" style="position: absolute; top: 23px; left: 150px; color: white;") FAQ