extends layout

block content

    nav.navbar.navbar-default
        .container
            .navbar-header.navbar-center
                a.nav-brand(href="./")
                    img(src="/img/logo.png")
            ul.nav.navbar-nav.navbar-left
                li
                    a(href="./") Home
                -if(loggedInAs.length > 0){
                li
                    a(href="./profile") Profile
                -}
            ul.nav.navbar-nav.navbar-right
                -if(loggedInAs.length > 0){
                li
                    a(href="./following") Following
                li
                    a(href="./myrooms") My Rooms
                -}
    .container
        .row
            .col-lg-6.col-lg-offset-3#followlist
                h1.text-center Followed Chat rooms
                -if(rooms.length == 0){
                p.text-center You are following no chat rooms.
                -}
                ul
                    -var n = 0
                    while n < rooms.length
                        li(style="padding: 5px 5px;")
                            .row
                                .col-xs-4
                                    p2(style="font-size: 14px;") Followers: #{rooms[n].followers}
                                    br
                                    p3(style="font-size: 14px;") Chatters: #{rooms[n].usersConnected}
                                .col-xs-8
                                    a(href="/c/" + rooms[n].name + "" style="font-size: 18px;") #{rooms[n].name}
                                    p(style="font-size: 16px;") #{rooms[n].description}
                        -n++
    .push
    footer
        p.text-center ChitterChat 2015
        a(href="/support" style="position: absolute; top: 23px; left: 50px; color: white;") Support
        a(href="/faq" style="position: absolute; top: 23px; left: 150px; color: white;") FAQ